<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/Default"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_item_layout"
    android:layout_marginBottom="@dimen/medium_padding"
    android:layout_marginTop="@dimen/medium_padding"
    android:paddingTop="@dimen/padding_12dp"
    android:paddingLeft="24dp"
    android:paddingBottom="@dimen/padding_12dp"
    android:paddingRight="@dimen/small_padding"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/txt_search_item_name"
        style="@style/SubTitle.Dark"
        android:checkMark="@drawable/select"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/padding_8dp"
        android:maxLines="2"
        android:singleLine="false"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="@string/select"
        android:textSize="@dimen/vymo_font_d"/>

    <com.sadiwala.shivam.util.CustomTextView
        android:id="@+id/description"
        style="@style/SelectionInputListItem"
        android:text="@string/description"
        android:layout_marginLeft="@dimen/padding_8dp"
        android:visibility="gone"/>

    <com.sadiwala.shivam.util.CustomTextView
        android:id="@+id/detectDescription"
        style="@style/SelectionInputListItem"
        android:text="@string/description"
        android:visibility="gone"/>

    <com.sadiwala.shivam.util.CustomTextView
        android:id="@+id/detectDistance"
        style="@style/SelectionInputListItem"
        android:text="@string/description"
        android:visibility="gone"/>
</LinearLayout>